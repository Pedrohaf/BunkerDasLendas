<%= render 'shared/page_title', title: "log in" %>
<%= form_for(:session, :html => {class: "form-horizontal", 
                        role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :email %>
    </div>
    <div class="col-md-8" style="padding-top:10px;">
      <%= f.email_field :email, class: "form-control", 
                            placeholder: "Digite seu email" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="control-label col-md-2" style="padding-top:10px;">
      <%= f.label :password %>
    </div>
    <div class="col-md-8" style="padding-top:10px;">
      <%= f.password_field :password, class: "form-control", placeholder: "Sua Senha" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10" style="padding-top:10px;">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-xlarge' %>
    </div>
  </div>
<% end %>
<div class="col-md-4 col-md-offset-4 colormatch" style="padding-top:10px;">
  [ <%= link_to "Não tem conta ? faça seu cadastro", signup_path %> ]
</div>