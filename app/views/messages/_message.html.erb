<div class="message">
  <p>
    <small><em>criado <%= time_ago_in_words(message.created_at) %> atras</em></small>
  </p>
  <p>
    <%= gravatar_for(message.user, size: 50) %>  
    <strong><%= message.user.username.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
</div>