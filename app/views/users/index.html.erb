<%= render 'shared/page_title', title: "Usuarios" %>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="chef-title"><%= link_to user.username.capitalize, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "Artigos") if user.articles %>
          <% if logged_in? and current_user.admin? && !user.admin %>
            <li><%= link_to "Deletar o usuario", user_path(user), method: :delete%></li>
          <%end%>
            </small></li>
        </div>
      </div>
    </ul>      
  <% end %>
</div>