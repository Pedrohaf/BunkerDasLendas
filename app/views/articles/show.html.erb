<h1 align="center">Nome do Artigo: <%= @article.name.capitalize %></h1>

<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>Description: </strong></h4>
  <hr />
  <%= @article.description %>
  <hr />
  <div class="pull-right">
    <p class="center">
      Created by:
    </p>
    <p>
      <small><%= @article.user.username %></small>
      <div class="pull-right">
        <%= time_ago_in_words(@article.created_at) %> atras
      </div>
    </p>
  </div>
</div>